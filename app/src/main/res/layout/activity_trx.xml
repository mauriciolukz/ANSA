<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.autonica.moviles.ansa.ActivityTrx"
    android:orientation="vertical">
    <!--ETIQUETAS TRX-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRX"
                android:enabled="false"
                android:id="@+id/textView"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="2">

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>
    <!--CONTROL TRX-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:editable="false"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txttrx"
                android:enabled="false"
                android:textColor="@color/abc_input_method_navigation_guard"><requestFocus/></EditText>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="2">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnsubir"
                android:background="@android:drawable/ic_menu_save"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Guardar"
                android:textColor="#2503ff"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnlimpiar"
                android:background="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Limpiar"
                android:textSize="@dimen/abc_action_bar_content_inset_material"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>
    <!--ETIQUETAS UBICACION Y CODIGO-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:id="@+id/textView2"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo"
                android:id="@+id/textView3"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txtubictrx"><requestFocus/></EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txtcodigotrx"/>
        </LinearLayout>

    </LinearLayout>
    <!--ETIQUETAS TRX-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo"
                android:enabled="false"
                android:id="@+id/textView4"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:enabled="false"
                android:id="@+id/textView5"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
    </LinearLayout>
    <!--CONTROL TRX-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:editable="false"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txtcodigotrxmuestreo"
                android:enabled="false"
                android:textColor="@color/abc_input_method_navigation_guard"><requestFocus/></EditText>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:editable="false"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txtdesctrx"
                android:enabled="false"
                android:textColor="@color/abc_input_method_navigation_guard"><requestFocus/></EditText>
        </LinearLayout>
    </LinearLayout>

    <!--ETIQUETAS UBICACION Y CODIGO-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
