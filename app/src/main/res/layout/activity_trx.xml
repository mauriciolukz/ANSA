                android:enabled="false"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard"><requestFocus/></EditText>
        </LinearLayout>

    </LinearLayout>
    <!--ETIQUETAS TRX-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "
                android:id="@+id/textView8"
                android:textColor="#fa071b"
                android:singleLine="true"
                android:textSize="@dimen/abc_dialog_padding_top_material" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="de "
                android:id="@+id/textView9"
                android:textColor="#ff0509"
                android:textSize="@dimen/abc_dialog_padding_top_material" />
