                android:id="@+id/textView7"
                android:textColor="#516bfa"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:drawableLeft="@mipmap/barcode"
                android:id="@+id/txtcantsoltrx"
                android:editable="false"
                android:enabled="false"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard"><requestFocus/></EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
